# Template file for 'autorunner'
pkgname=autorunner
version=0.1
revision=1
wrksrc="autorunner-master"
conf_files="/etc/autorunner.config"
hostmakedepends="unzip"
depends="base-system"
short_desc="Autostart helper for your required desktop"
maintainer="teldra <teldra@rotce.de>"
license="MIT"
homepage="https://github.com/cytopia/${pkgname}"
distfiles="https://github.com/cytopia/${pkgname}/archive/master.zip"
